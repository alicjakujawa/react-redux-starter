{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true
  },
  "plugins": [
    "react",
    "babel"
  ],
  "rules": {
    "react/prefer-stateless-function": 0,
    "babel/new-cap": 0,
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "sourceType": "module",
      "experimentalObjectRestSpread": true
    }
  },
}
